{
  "name": "@tertium/js",
  "version": "2.0.0",
  "description": "Shared JS configs and types.",
  "type": "module",
  "exports": {
    "./core/*": "./app/core/*",
    "./entities/*": "./app/entities/*",
    "./scripts/*": "./app/scripts/*"
  },
  "files": [
    "app/"
  ],
  "scripts": {
    "release:patch": "node app/scripts/release.js patch",
    "release:minor": "node app/scripts/release.js minor",
    "release:major": "node app/scripts/release.js major",
    "test": "echo \"no test specified\" && exit 0",
    "lint": "biome check app",
    "format": "biome format app",
    "biome-check": "biome check app",
    "lint:fix": "biome check --write app"
  },
  "author": "Vitalii Balabanov",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/node": "^25.0.9",
    "typescript": "^5.8.3"
  }
}
